{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "noImplicitAny": true,
  "esModuleInterop": true,
  "resolveJsonModule": true,
  "declaration": true
}
